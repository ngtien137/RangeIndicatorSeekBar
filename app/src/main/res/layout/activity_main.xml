<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:clipChildren="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.lhd.views.rangeindicatorseekbar.RangeIndicatorSeekBar

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        app:bar_height="4dp"
        app:bar_corner="2dp"

        app:thumb_size="10dp"
        app:thumb_ripple_size="20dp"
        app:thumb_ripple_color="#8f54"
        app:thumb_color="#f0f"
        app:thumb_expand_touch_size="5dp"

        app:text_indicator_size="10sp"

        app:max="100"
        app:min="0"
        app:min_progress="20"
        app:progress_visible_as_int="true"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>